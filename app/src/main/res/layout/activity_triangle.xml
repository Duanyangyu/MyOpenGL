<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.duan.opengl.triangle.TriangleActivity">

    <com.duan.opengl.triangle.TriangleGLSurfaceView
        android:id="@+id/mTriangleGLSurfaceView"
        android:layout_gravity="top|center"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnRequestRender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Request Render"/>

        <Button
            android:id="@+id/btnOpenGLRectangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OpenGL Rectangle"/>
    </LinearLayout>


</FrameLayout>
